<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FrontEnd</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FrontEnd.styles.css" asp-append-version="true" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-success shadow-sm">
            <div class="container">
                <a class="navbar-brand text-white fw-bold d-flex align-items-center" asp-area="" asp-page="/Index">
                    <i class="bi bi-heart-pulse me-2"></i> NutriLife
                </a>
                <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">
                                <i class="bi bi-house-door me-1"></i> Inicio
                            </a>
                        </li>

                        @* Opciones dinámicas según el rol *@
                        @if (Context.Session.GetString("UserRole") == "Nutricionista")
                        {
                            <li class="nav-item"><a class="nav-link text-white" asp-page="/NutricionistaDashboard"><i class="bi bi-speedometer2 me-1"></i> Panel</a></li>
                            <li class="nav-item"><a class="nav-link text-white" asp-page="/Consultas/Index"><i class="bi bi-calendar-check me-1"></i> Consultas</a></li>
                            <li class="nav-item"><a class="nav-link text-white" asp-page="/PlanesNutricionales/Index"><i class="bi bi-clipboard-heart me-1"></i> Planes</a></li>
                            <li class="nav-item"><a class="nav-link text-white" asp-page="/Pacientes/Index"><i class="bi bi-people me-1"></i> Pacientes</a></li>
                        }
                        else if (Context.Session.GetString("UserRole") == "Paciente")
                        {
                            <li class="nav-item"><a class="nav-link text-white" asp-page="/PacienteDashboard"><i class="bi bi-speedometer2 me-1"></i> Panel</a></li>
                            <li class="nav-item"><a class="nav-link text-white" asp-page="/Consultas/PacienteConsultas"><i class="bi bi-calendar-check me-1"></i> Mis Consultas</a></li>
                            <li class="nav-item"><a class="nav-link text-white" asp-page="/PlanesNutricionales/PacientePlanes"><i class="bi bi-clipboard-heart me-1"></i> Mis Planes</a></li>
                            <li class="nav-item"><a class="nav-link text-white" asp-page="/Recomendaciones/PacienteRecomendaciones"><i class="bi bi-lightbulb me-1"></i> Recomendaciones</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link text-white" asp-page="/Login"><i class="bi bi-box-arrow-in-right me-1"></i> Iniciar Sesión</a></li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdownRegister" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-plus me-1"></i> Registrarse
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-page="/Nutricionistas/Register">Como Nutricionista</a></li>
                                    <li><a class="dropdown-item" asp-page="/Pacientes/Register">Como Paciente</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (Context.Session.GetString("UserRole") != null)
                        {
                            <li class="nav-item">
                                <form method="post" asp-page="/Logout" class="d-inline">
                                    <button type="submit" class="btn btn-outline-light btn-sm rounded-pill">
                                        <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Contenido -->
    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-success text-white text-center py-3 mt-auto shadow-lg">
        <div class="container">
            <p class="mb-1">© 2025 - NutriLife 🌱</p>
            <a asp-area="" asp-page="/Privacy" class="text-white-50 text-decoration-none">
                <i class="bi bi-shield-lock"></i> Privacidad
            </a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
