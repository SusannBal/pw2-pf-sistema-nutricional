@page
@model Frontend.Pages.ActividadesFisicas.CreateModel

@{
    ViewData["Title"] = "Registrar Nueva Actividad Física";
}

<h1>Registrar Nueva Actividad Física</h1>

<a asp-page="Index" class="btn btn-secondary mb-3">Volver al listado</a>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var entry in ViewData.ModelState.Values)
            {
                @foreach (var error in entry.Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<form method="post" class="needs-validation" novalidate>
    <div class="form-group mb-3">
        <label asp-for="ActividadFisica.Nombre" class="form-label"></label>
        <input asp-for="ActividadFisica.Nombre" class="form-control" required />
        <span asp-validation-for="ActividadFisica.Nombre" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ActividadFisica.Descripcion" class="form-label"></label>
        <textarea asp-for="ActividadFisica.Descripcion" class="form-control"></textarea>
        <span asp-validation-for="ActividadFisica.Descripcion" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Registrar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}