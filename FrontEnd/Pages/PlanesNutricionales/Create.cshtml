@page
@model Frontend.Pages.PlanesNutricionales.CreateModel

@{
    ViewData["Title"] = "Registrar Nuevo Plan Nutricional";
}

<h1>Registrar Nuevo Plan Nutricional</h1>

<a asp-page="Index" class="btn btn-secondary mb-3">Volver al listado</a>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var entry in ViewData.ModelState.Values)
            {
                @foreach (var error in entry.Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<form method="post" class="needs-validation" novalidate>
    <div class="form-group mb-3">
        <label asp-for="PlanNutricional.IdConsulta" class="form-label">Consulta</label>
        <select asp-for="PlanNutricional.IdConsulta" class="form-control" required>
            <option value="">-- Seleccione una Consulta --</option>
            @if (Model.Consultas != null)
            {
                @foreach (var consulta in Model.Consultas)
                {
                    <option value="@consulta.IdConsulta">
                        @($"Consulta ID: {consulta.IdConsulta} - Motivo: {consulta.Motivo} - Fecha: {consulta.Fecha.ToShortDateString()}")
                    </option>
                }
            }
        </select>
        <span asp-validation-for="PlanNutricional.IdConsulta" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PlanNutricional.Nombre" class="form-label"></label>
        <input asp-for="PlanNutricional.Nombre" class="form-control" required />
        <span asp-validation-for="PlanNutricional.Nombre" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PlanNutricional.Descripcion" class="form-label"></label>
        <textarea asp-for="PlanNutricional.Descripcion" class="form-control"></textarea>
        <span asp-validation-for="PlanNutricional.Descripcion" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Registrar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}